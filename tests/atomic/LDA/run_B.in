     
        &CONTROL
        calculation = "LDA"
             prefix = "atom_05_B"
           work_dir = "./SCRATCH"
            nprint  = 50
        /
     
        &SYSTEM
               atom = 'B '
             config = '1s2 2s2 2p1'
              nspin = 2
               lmax = 1
        /
     
        &METHOD
         basis_type = "bspline"
          grid_type = "cubic"
      bspline_size  = 500
      bspline_order = 4
        gauss_order = 8
               rmax = 100.0

        beta_mixing = 0.8
             niterx = 50
          spin_asym = 0.0
        dm_conv_thr = 1.0d-10
      etot_conv_thr = 1.0d-10

        /
