     
        &CONTROL
        calculation = "LDA"
             prefix = "atom_11_Na"
           work_dir = "./SCRATCH"
            nprint  = 50
        /
     
        &SYSTEM
               atom = 'Na'
             config = '1s1 1s1 2s1 2s1 2p3 2p3 3s1'
              nspin = 2
               lmax = 1
        /
     
        &METHOD
         basis_type = "bspline"
          grid_type = "cubic"
      bspline_size  = 500
      bspline_order = 4
        gauss_order = 8
               rmax = 100.0

        beta_mixing = 0.5
             niterx = 50
          spin_asym = 0.0
        dm_conv_thr = 1.0d-10
      etot_conv_thr = 1.0d-10
        /
