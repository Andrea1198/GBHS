     
        &CONTROL
        calculation = "S-LDA_QP"
             prefix = "atom_10_Ne"
           work_dir = "./SCRATCH"
            nprint  = 50
       scf_datatype = "LDA"
        /
     
        &SYSTEM
               atom = 'Ne'
             config = '1s2 2s2 2p6'
              nspin = 1
               lmax = 1
        /
     
        &METHOD
         basis_type = "bspline"
          grid_type = "cubic"
      bspline_size  = 750
      bspline_order = 4
        gauss_order = 8
               rmax = 100.0

        beta_mixing = 0.4
             niterx = 100
          spin_asym = 0.0
        dm_conv_thr = 1.0d-10
      etot_conv_thr = 1.0d-10


        /
