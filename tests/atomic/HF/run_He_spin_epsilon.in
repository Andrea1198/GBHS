     
        &CONTROL
        calculation = "EPSILON"
             prefix = "atom_02_He_spin"
           work_dir = "./SCRATCH"
            nprint  = 50
        debug_level = 0
       scf_datatype = "LDA"
        /
     
        &SYSTEM
               atom = 'He'
             config = '1s1 1s1'
              nspin = 2
               lmax = 4
               nbnd = 1
        /
     
        &METHOD
         basis_type = "bspline"
          grid_type = "cubic"
      bspline_size  = 500
      bspline_order = 4
        gauss_order = 8
               rmax = 100.0

        beta_mixing = 0.8
             niterx = 50
          spin_asym = 0.0
        dm_conv_thr = 1.0d-10
      etot_conv_thr = 1.0d-10
        /

       &RESPONSE
               nomg = 11
            omg_min = 0.0d0 
            omg_max = 1.0d0 
         resp_delta = 0.01
         resp_analyt = "time-ordered"
          nbnd_chi0 = 0
        /
